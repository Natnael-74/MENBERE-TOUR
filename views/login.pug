extends base 

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Log into your account
      //- method='POST' action='/api/v1/users/login'
      form.form.form--login#login
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(
            type='email',
            name='email',
            placeholder='you@example.com',
            required
          )
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(
            type='password',
            name='password',
            placeholder='••••••••',
            required,
            minlength='8'
          )
        .form__group.form__group--horizontal
          button.btn.btn--green(type='submit') Login
          a.btn-text(href='/forgotPassword') Forgot your password?
