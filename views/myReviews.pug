extends base 

include _reviewCard


mixin navItem(link, text, icon, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`img/icons.svg#icon-${icon}`)
      | #{text}

block content
  main.main
    .user-view
      nav.user-view__menu
        ul.side-nav
          +navItem('/me', 'Settings', 'settings')
          +navItem('/my-tours', 'My bookings', 'briefcase')
          +navItem('/my-reviews', 'My reviews', 'star',true)
          +navItem('#', 'Billing', 'credit-card')

        - if (user.role === 'admin')
          .admin-nav
            h5.admin-nav__heading Admin
            ul.side-nav
              +navItem('#', 'Manage tours', 'map')
              +navItem('#', 'Manage users', 'users')
              +navItem('#', 'Manage reviews', 'star')
              +navItem('#', 'Manage bookings', 'briefcase')
        //- .user-view__content
      .user-view__content
        .user-view__form-container.reviews-container
          h2.heading-secondary.ma-bt-md Your Reviews
          if reviews && reviews.length > 0
            .rating__box 
              each review in reviews
                a.review__link(href=`/editAndDeleteReview/${review.id}`) 
                  +reviewCard(review, true)
          else
            .reviews__empty
              svg
                use(xlink:href='/img/icons.svg#icon-star')
              p You haven't written any reviews yet. Book a tour and share your experience!
        //- .user-view__content